+from pypdf import PdfReader
+import os
+
+# Define the paths
+input_pdf_path = '/data/data/agent_test_codebase/GitTaskBench/queries/PyPDF2_01/input/PyPDF2_01_input.pdf'
+output_txt_path = '/data/data/agent_test_codebase/GitTaskBench/eval_automation/output/PyPDF2_01/output.txt'
+
+# Ensure the output directory exists
+os.makedirs(os.path.dirname(output_txt_path), exist_ok=True)
+
+# Read PDF
+reader = PdfReader(input_pdf_path)
+
+# Collect text from each page
+text = []
+for page in reader.pages:
+    text.append(page.extract_text())
+
+# Write the extracted text into a .txt file
+with open(output_txt_path, 'w', encoding='utf-8') as f:
+    f.write('\n'.join(text))
